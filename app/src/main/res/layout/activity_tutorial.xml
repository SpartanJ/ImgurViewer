<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@android:color/black">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="@string/tutorial"
			android:id="@+id/tutorial_title"
			android:background="#333"
			android:layout_gravity="center_horizontal"
			android:textColor="@android:color/white"
			android:gravity="center"
			android:padding="12dp"/>

		<ImageView
			android:foreground="?android:attr/selectableItemBackgroundBorderless"
			android:background="@android:color/transparent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/settings"
			android:src="@drawable/ic_settings_white_24dp"
			android:padding="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			/>

	</RelativeLayout>


	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:background="#222"
		android:text="@string/textPastView"
		android:id="@+id/tutorial_text_paste"
		android:layout_gravity="center_horizontal"
		android:textColor="@android:color/white"
		android:gravity="center"
		android:padding="12dp" />

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="48dp"
		android:hint="@string/textPaste"
		android:id="@+id/linkPasteInput"
		android:textColor="@android:color/white"
		/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:background="#222"
		android:text="@string/tutorial_open"
		android:id="@+id/tutorial_text"
		android:layout_gravity="center_horizontal"
		android:textColor="@android:color/white"
		android:gravity="center"
		android:padding="12dp" />

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:id="@+id/tutorial_image"
		android:layout_gravity="center_horizontal"
		android:scaleType="fitCenter"
		android:adjustViewBounds="true"
		android:src="@drawable/tut1" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:foreground="?android:attr/selectableItemBackgroundBorderless"
		android:text="@string/tutorial_next"
		android:id="@+id/tutorial_next"
		android:background="#222"
		android:textColor="@android:color/white"
		android:gravity="center"
		android:layout_gravity="center"
		android:padding="8dp" />

</LinearLayout>